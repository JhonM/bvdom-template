{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "types", "**/*.spec.ts"]
}

